<h2 class="username"> <%= @user.username %> </h2>

<span class="user-answers">
<h3>Questions</h3>
<hr>
	<% @questions.each do |question| %>
  <span>
  <p>
    <%= link_to question.title, question %> 
    <%= link_to 'Edit', edit_question_path(question.id), :class => "button edit"%>
    <%= button_to "Remove", {:controller => :questions, :action => :destroy, :id => question.id}, :form_class => "profile_tools", :class => "button delete", :confirm => "Are you sure? You cannot undo this action", :method => :delete, :remote => true %><br>
    <small>
      <%= pluralize(question.answers.count, 'answer') %> | 
      posted <%= question.time_ago %>
    </small>
  </p>
</span>
	<% end %>
</span>


<span class="user-questions">
<h3>Answers</h3>
<hr>
  <% @answers.each do |answer| %>
  <p>
    <%= link_to answer.body, answer.question %><br>
    <small>
      <%= answer.vote_count %> votes | 
      posted <%= answer.time_ago %>
    </small>
  </p>
  <% end %>
</span>
