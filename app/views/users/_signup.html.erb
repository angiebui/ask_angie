<div class='signup'>
  <h2> sign up </h2>
  <div class='errors'>
    <% if flash[:notice] %>
      <% flash[:notice].each do |notice| %>
        <p><small><%= notice %></small></p>
      <% end %>
    <% end %>
  </div>
</div>

<div class='signup-form'>
  <%= form_for @user, :url => { :action => "create"} do |f| %><br>
  <%= f.text_field :username, :placeholder => "Username", required: true %><br>
  <%= f.text_field :email, :placeholder => "Email", required: true %><br>
  <%= f.password_field :password, :placeholder => "Password", required: true %><br>
  <%= f.select(:gender, options_for_select(["male", "female"])) %><br><br>
  <%= f.submit "create account" %><br>
  <% end %>
</div>
